{
  "rewrites": [
    {
      "source": "/buy/:id",
      "destination": "/api/preview?id=:id",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|WhatsApp|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Discordbot|SkypeUriPreview).*"
        }
      ]
    },
    {
      "source": "/preview/:id",
      "destination": "/api/preview?id=:id"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1600, 1920, 2048],
    "domains": ["alxproduction.blob.core.windows.net"],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "alxproduction.blob.core.windows.net",
        "pathname": "/multipost-public/**"
      }
    ]
  }
}
